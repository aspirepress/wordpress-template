#!/bin/bash

. $(dirname $0)/_prelude.bash

packages=()
for package in "$@"
do
  [[ ! $package =~ / ]] && package=${DEFAULT_NAMESPACE:-wpackagist-plugin}/$package
  [[ ! $package =~ : ]] && [[ -n ${DEFAULT_VERSION:-} ]] && package="$package:$DEFAULT_VERSION"
  packages+=($package)
done

composer require ${packages[*]}
